{
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "test/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "declaration": true,
    "outDir": "dist"
  }
}
